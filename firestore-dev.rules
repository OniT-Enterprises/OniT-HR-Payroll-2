rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - VERY PERMISSIVE
    // These rules allow authenticated users to read/write any document
    // Use ONLY for development and testing!

    // Allow all operations for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Also allow for anonymous/development users
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }

    // Emergency fallback for development (VERY PERMISSIVE - REMOVE IN PRODUCTION)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
