rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access for authenticated users (including anonymous)
    // This will work with anonymous authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Fallback for development - allow unrestricted access
    // Remove this rule for production
    match /{document=**} {
      allow read, write: if true;
    }

    // Production rules example (comment out the above and use these):
    // match /candidates/{candidateId} {
    //   allow read, write: if request.auth != null && request.auth.uid != null;
    // }
    // match /employees/{employeeId} {
    //   allow read, write: if request.auth != null && request.auth.uid != null;
    // }
    // match /test/{testId} {
    //   allow read, write: if request.auth != null;
    // }
  }
}
